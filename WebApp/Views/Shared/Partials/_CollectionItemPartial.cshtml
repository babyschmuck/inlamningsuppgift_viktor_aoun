@model CollectionItemModel

<div class="item">
    <div class="image-section">
        <img src="@Model.ImageUrl" alt="" />
        <div class="menu">
            <div class="icons">
                <button class="link"><i class="fa-regular fa-code-compare"></i></button>
                <button class="link"><i class="fa-regular fa-heart"></i></button>
                <button class="link"><i class="fa-regular fa-bag-shopping"></i></button>
            </div>
            <a class="btn-theme" asp-controller="Product" asp-action="Index" asp-route-articleNumber="@Model.ArticleNumber">QUICK VIEW</a>
        </div>
    </div>
    <div class="body-section">
        <div class="category">@Model.Category</div>
        <div class="name">@Model.ProductName</div>
        <partial name="~/Views/Shared/Partials/_StarRatingPartial.cshtml" model="Model.StarRating" />
        <div class="price">$@Model.Price</div>
    </div>
</div>